def SaveChange(inputMoney):
    global oneDollar, halfDollar
    if(inputMoney=='1'):
        oneDollar +=1
    elif(inputMoney=='0.5'):
        halfDollar +=1
    else:
        print("Error: %s, wrong coin input" %inputMoney)
        exit()

def ReturnChange(inputMoney):
    global oneDollar, halfDollar
    if(inputMoney=='1'):
        oneDollar -=1
        print("Return change $1")
    elif(inputMoney=='0.5'):
        halfDollar -=1
        print("Return change $0.5")
    elif(inputMoney=='0'):
        print("No change return")
    else:
        print("Error: %s, wrong coin input" %inputMoney)
        exit()

